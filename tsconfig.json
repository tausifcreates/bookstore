{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }   
    },
    "include": [
        "src/**/*.ts"
    ]
}